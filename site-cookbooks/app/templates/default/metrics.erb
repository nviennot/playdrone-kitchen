description "metrics"

respawn
respawn limit 10000 30
kill timeout 65

env APP_PATH="<%= @app_path %>/current"
env RVM_ENV="<%= @rvm_env %>"
env RAILS_ENV=production
env CMD="rake metrics:run"

setuid deploy
setgid deploy

script
  cd $APP_PATH
  exec /usr/local/rvm/bin/rvm-exec $RVM_ENV bundle exec $CMD
end script
